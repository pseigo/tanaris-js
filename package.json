{
  "name": "tanaris",
  "version": "0.0.1-alpha.1",
  "description": "Common utility library for client-side applications. (experimental)",
  "keywords": [
    "stdlib",
    "util"
  ],
  "license": "MIT",
  "author": {
    "name": "Peyton Seigo",
    "url": "https://github.com/pseigo"
  },
  "homepage": "https://github.com/pseigo/tanaris-js#readme",
  "bugs": {
    "url": "https://github.com/pseigo/tanaris-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pseigo/tanaris-js.git"
  },
  "type": "module",
  "main": "./src/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./arrays": "./dist/tanaris/arrays.js",
    "./strings": "./dist/tanaris/strings.js"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "watch": "node scripts/watch.js",
    "clean": "node -e \"fs.rmSync('dist', { recursive: true, force: true })\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "npx eslint",
    "format-check": "npx prettier *.config.cjs *.config.js package.json tsconfig.json scripts src test --check",
    "format": "npx prettier *.config.cjs *.config.js package.json tsconfig.json scripts src test --write",
    "check": "npx tsc --noEmit && npm run lint && npm run format-check",
    "prepare": "npm run clean && npm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@jest/globals": "^29.7.0",
    "esbuild": "0.25.1",
    "eslint": "^9.22.0",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3"
  }
}
